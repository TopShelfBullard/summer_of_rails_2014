<div id="links">

  <% @links.each do |link| %>
     <h3><%= link_to "#{link.name}", link%></h3>
     <p><%= link_to 'Edit', edit_link_path(link) %> | <%= link_to 'Delete', link, method: :delete, data: { confirm: 'Are you sure?' } %></p>
     <hr>
  <% end %>
  <br>
  <%= link_to 'New Link', new_link_path %>
</div>
